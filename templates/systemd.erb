[Unit]
Description=gitea
After=syslog.target network.target

[Service]
Type=simple
WorkingDirectory=<%= @installation_directory %>
# If using unix socket: Tells Systemd to create /run/gitea folder to home gitea.sock
# Manual creation would vanish after reboot.
<%- if @socket_run_dir %>RuntimeDirectory=<%= @socket_run_dir -%><% end %>
User=<%= @owner %>
ExecStart=<%= @installation_directory %>/gitea web
PIDFile=/var/spool/gitea/pid/master.pid
LimitNOFILE=49152

[Install]
WantedBy=multi-user.target
